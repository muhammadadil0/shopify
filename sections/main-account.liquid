<div class="container" style="padding: 6rem 0;">
  <div class="account-header" style="display: flex; justify-content: space-between; align-items: center; margin-bottom: 4rem; border-bottom: 1px solid #eee; padding-bottom: 2rem;">
    <div>
      <h1 class="serif">My Account</h1>
      <p>Welcome back, {{ customer.first_name }}</p>
    </div>
    <a href="/account/logout" class="button-primary" style="background: #333;">Log Out</a>
  </div>

  <div style="display: grid; grid-template-columns: 2fr 1fr; gap: 4rem;">
    <div>
      <h2 style="font-size: 1.2rem; text-transform: uppercase; letter-spacing: 1px; margin-bottom: 1.5rem;">Order History</h2>
      {% if customer.orders.size > 0 %}
        <table style="width: 100%; border-collapse: collapse;">
          <thead>
            <tr style="text-align: left; border-bottom: 1px solid #ddd;">
              <th style="padding: 1rem 0;">Order</th>
              <th>Date</th>
              <th>Status</th>
              <th>Total</th>
            </tr>
          </thead>
          <tbody>
            {% for order in customer.orders %}
              <tr style="border-bottom: 1px solid #f5f5f5;">
                <td style="padding: 1rem 0;">{{ order.name | link_to: order.customer_url }}</td>
                <td>{{ order.created_at | date: "%b %d, %Y" }}</td>
                <td>{{ order.fulfillment_status_label }}</td>
                <td>{{ order.total_price | money }}</td>
              </tr>
            {% endfor %}
          </tbody>
        </table>
      {% else %}
        <p>You haven't placed any orders yet.</p>
      {% endif %}
    </div>

    <div>
      <h2 style="font-size: 1.2rem; text-transform: uppercase; letter-spacing: 1px; margin-bottom: 1.5rem;">Account Details</h2>
      <div style="background: #f9f9f9; padding: 2rem; border-radius: 4px;">
        {{ customer.default_address | format_address }}
        <a href="/account/addresses" style="text-decoration: underline; font-size: 0.9rem; margin-top: 1rem; display: block;">View Addresses ({{ customer.addresses_count }})</a>
      </div>
    </div>
  </div>
</div>

{% schema %}
{
  "name": "Account Main",
  "settings": []
}
{% endschema %}
