<div class="container" style="padding: 6rem 0;">
  <div class="search-header" style="text-align: center; margin-bottom: 4rem;">
    <h1 class="serif" style="font-size: 2.5rem; margin-bottom: 1.5rem;">Find Your Perfect Gem</h1>
    <form action="{{ routes.search_url }}" method="get" role="search" class="search-form" style="max-width: 600px; margin: 0 auto; display: flex; gap: 1rem;">
      <div style="flex: 1; position: relative;">
        <input 
          type="text" 
          name="q" 
          placeholder="Search for Emeralds, Rings, etc..." 
          value="{{ search.terms | escape }}"
          style="width: 100%; padding: 1rem 1rem 1rem 3rem; border: 1px solid #ddd; border-radius: 2px; font-family: var(--font-body-family);"
        >
        <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="#999" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" style="position: absolute; left: 1rem; top: 50%; transform: translateY(-50%);"><circle cx="11" cy="11" r="8"></circle><line x1="21" y1="21" x2="16.65" y2="16.65"></line></svg>
      </div>
      <button type="submit" class="button-primary">Search</button>
    </form>
  </div>

  {% if search.performed %}
    {% if search.results_count > 0 %}
      <p style="margin-bottom: 2rem; color: #666;">Showing {{ search.results_count }} results for "{{ search.terms }}"</p>
      <div class="product-grid">
        {% for item in search.results %}
          {% if item.object_type == 'product' %}
            <div class="product-card">
              <a href="{{ item.url }}" class="product-card__link">
                <div class="product-card__image">
                  <img src="{{ item.featured_image | image_url: width: 600 }}" alt="{{ item.title }}">
                </div>
                <div class="product-card__category">{{ item.collections.first.title }}</div>
                <h3 class="product-card__title">{{ item.title }}</h3>
                <div class="product-card__price">{{ item.price | money }}</div>
              </a>
            </div>
          {% endif %}
        {% endfor %}
      </div>
    {% else %}
      <div style="text-align: center; padding: 4rem 0; border-top: 1px solid #eee;">
        <p style="font-size: 1.2rem; color: #666;">No results found for "{{ search.terms }}".</p>
        <p style="color: #999;">Try checking your spelling or using more general terms.</p>
      </div>
    {% endif %}
  {% endif %}
</div>

{% schema %}
{
  "name": "Search Main",
  "settings": []
}
{% endschema %}
