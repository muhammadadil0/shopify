<div class="container" style="padding: 6rem 0;">
  <div class="section-title">
    <h2>Your Wishlist</h2>
  </div>
  
  <div id="wishlist-grid" class="product-grid">
    <!-- Wishlist items will be injected here via JS -->
    <p style="grid-column: 1/-1; text-align: center; color: #666;">
      Your Favorites list is currently empty. <a href="/collections/all" style="text-decoration:underline;">Start browsing</a> to add items.
    </p>
  </div>
</div>

<script>
  // Simple Mock Wishlist Logic for Demo
  document.addEventListener('DOMContentLoaded', function() {
    const wishlistGrid = document.getElementById('wishlist-grid');
    // In a real app this would pull from LocalStorage or Metafields
    // For demo purposes, we will show 2 'suggested' wishlist items if empty
    
    // Check if we want to show demo state
    if(window.location.hash === '#demo') {
       wishlistGrid.innerHTML = `
        <div class="product-card">
          <div class="product-card__image" style="background: #fdfcfb;">
             <img src="{{ 'placeholder-ruby.png' | asset_url }}" style="width: 100%; height: 100%; object-fit: contain; padding: 10%;">
          </div>
          <div class="product-card__category">Gemstone</div>
          <h3 class="product-card__title">Natural Ruby (Saved)</h3>
          <div class="product-card__price">$2,500.00</div>
          <button class="button-primary" style="width:100%; justify-content:center; margin-top:10px;">Add to Cart</button>
        </div>
       `; 
    }
  });
</script>

