<div class="customer-login-container">
  <div class="login-split">
    <!-- Login Side -->
    <div class="login-form-wrapper" id="login">
      <h1 class="serif" style="margin-bottom: 0.5rem;">Welcome Back</h1>
      <p style="color: #666; margin-bottom: 2rem;">Sign in to check your order status.</p>
      
      {% form 'customer_login' %}
        {{ form.errors | default_errors }}
        
        <div class="field">
          <input type="email" name="customer[email]" placeholder="Email" class="input-field" required>
        </div>
        
        <div class="field">
          <input type="password" name="customer[password]" placeholder="Password" class="input-field" required>
        </div>
        
        <button type="submit" class="button-primary full-width">Sign In</button>
        
        <div style="margin-top: 1rem; text-align: center;">
          <a href="#register" onclick="document.getElementById('login').style.display='none';document.getElementById('register').style.display='block';return false;">Create an account</a>
          <span style="margin: 0 5px;">|</span>
          <a href="/account/login#recover">Forgot password?</a>
        </div>
      {% endform %}
    </div>

    <!-- Register Side (Hidden by default or toggled) -->
    <div class="login-form-wrapper" id="register" style="display: none;">
      <h1 class="serif" style="margin-bottom: 0.5rem;">Create Account</h1>
      <p style="color: #666; margin-bottom: 2rem;">Join us for exclusive offers and faster checkout.</p>
      
      {% form 'create_customer' %}
        {{ form.errors | default_errors }}
        
        <div class="field">
          <input type="text" name="customer[first_name]" placeholder="First Name" class="input-field">
        </div>

        <div class="field">
          <input type="text" name="customer[last_name]" placeholder="Last Name" class="input-field">
        </div>
        
        <div class="field">
          <input type="email" name="customer[email]" placeholder="Email" class="input-field" required>
        </div>
        
        <div class="field">
          <input type="password" name="customer[password]" placeholder="Password" class="input-field" required>
        </div>
        
        <button type="submit" class="button-primary full-width">Create Account</button>
        
        <div style="margin-top: 1rem; text-align: center;">
          <a href="#login" onclick="document.getElementById('register').style.display='none';document.getElementById('login').style.display='block';return false;">Already have an account? Sign in</a>
        </div>
      {% endform %}
    </div>
    
  </div>
  
  <div class="login-image">
     <!-- Using one of the generated placeholder gems for the aesthetic side -->
     <img src="{{ 'placeholder-diamond.png' | asset_url }}" alt="Luxury Login" style="width: 60%; height: auto; object-fit: contain;">
  </div>
</div>

<style>
  .customer-login-container {
    display: flex;
    min-height: 80vh;
  }
  
  .login-split {
    flex: 1;
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 2rem;
    background: #fff;
  }
  
  .login-image {
    flex: 1;
    background: #fcfbf9;
    display: flex;
    align-items: center;
    justify-content: center;
  }
  
  .login-form-wrapper {
    width: 100%;
    max-width: 400px;
  }
  
  .field { margin-bottom: 1rem; }
  
  .input-field {
    width: 100%;
    padding: 1rem;
    border: 1px solid #ddd;
    border-radius: 4px;
    font-family: var(--font-body-family);
  }
  
  .full-width { width: 100%; justify-content: center; padding: 1rem; }
  
  @media(max-width: 768px) {
    .customer-login-container { flex-direction: column; }
    .login-image { display: none; }
  }
</style>

{% schema %}
{
  "name": "Login",
  "settings": []
}
{% endschema %}
