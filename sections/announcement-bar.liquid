<div class="announcement-bar" style="background-color: {{ section.settings.bg_color }}; color: {{ section.settings.text_color }};">
  <div class="container announcement-bar__container">
    {% for block in section.blocks %}
      <div class="announcement-item" {{ block.shopify_attributes }}>
        {% if block.settings.link != blank %}
          <a href="{{ block.settings.link }}" class="announcement-link" style="color: {{ section.settings.text_color }};">
        {% endif %}
          <span>{{ block.settings.text }}</span>
        {% if block.settings.link != blank %}
          </a>
        {% endif %}
      </div>
    {% endfor %}
  </div>
</div>

<style>
  .announcement-bar {
    padding: 10px 0;
    text-align: center;
    font-size: 0.75rem;
    letter-spacing: 1px;
    text-transform: uppercase;
    font-weight: 500;
  }
  .announcement-bar__container {
    display: flex;
    justify-content: center;
    align-items: center;
    gap: 2rem;
  }
  .announcement-item { margin: 0; }
  .announcement-link { text-decoration: none; border-bottom: 1px solid currentColor; }
</style>

{% schema %}
{
  "name": "Announcement Bar",
  "settings": [
    {
      "type": "color",
      "id": "bg_color",
      "label": "Background Color",
      "default": "#111111"
    },
    {
      "type": "color",
      "id": "text_color",
      "label": "Text Color",
      "default": "#ffffff"
    }
  ],
  "blocks": [
    {
      "type": "announcement",
      "name": "Announcement",
      "settings": [
        {
          "type": "text",
          "id": "text",
          "label": "Text",
          "default": "âœ¨ SPECIAL OFFER: 20% OFF ALL NATURAL GEMSTONES"
        },
        {
          "type": "url",
          "id": "link",
          "label": "Link"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Announcement Bar",
      "blocks": [
        { "type": "announcement" }
      ]
    }
  ]
}
{% endschema %}
