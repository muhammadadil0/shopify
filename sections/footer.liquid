<footer class="footer">
  <div class="container">
    <div class="footer__grid">
      {% for block in section.blocks %}
        {% case block.type %}
          {% when 'about' %}
            <div class="footer__col" {{ block.shopify_attributes }}>
              <h3 class="footer__title">{{ block.settings.title | uppercase }}</h3>
              <div class="footer__address">
                {{ block.settings.address_text }}
              </div>
              <div class="footer__socials">
                {% if block.settings.show_socials %}
                  <a href="{{ settings.social_facebook_link }}">FB</a>
                  <a href="{{ settings.social_instagram_link }}">IG</a>
                  <a href="{{ settings.social_youtube_link }}">YT</a>
                {% endif %}
              </div>
            </div>
          {% when 'menu' %}
            <div class="footer__col" {{ block.shopify_attributes }}>
              <h3 class="footer__title">{{ block.settings.title | uppercase }}</h3>
              <ul class="footer__list">
                {% for link in block.settings.menu.links %}
                  <li><a href="{{ link.url }}">{{ link.title }}</a></li>
                {% endfor %}
              </ul>
            </div>
        {% endcase %}
      {% endfor %}
    </div>

    <div class="footer__bottom">
      <div class="footer__copyright">
        &copy; {{ 'now' | date: "%Y" }} {{ shop.name }}. All Rights Reserved.
      </div>
      <div class="footer__pay-icons">
        <span>PayPal</span> <span>Visa</span> <span>Mastercard</span>
      </div>
    </div>
  </div>
</footer>

{% schema %}
{
  "name": "Footer",
  "blocks": [
    {
      "type": "about",
      "name": "About / Address",
      "limit": 1,
      "settings": [
        { "type": "text", "id": "title", "label": "Heading", "default": "About Us" },
        { "type": "richtext", "id": "address_text", "label": "Address Text", "default": "<p>Zadran Gems Ltd...</p>" },
        { "type": "checkbox", "id": "show_socials", "label": "Show Socials", "default": true }
      ]
    },
    {
      "type": "menu",
      "name": "Link List",
      "settings": [
        { "type": "text", "id": "title", "label": "Heading", "default": "Categories" },
        { "type": "link_list", "id": "menu", "label": "Menu" }
      ]
    }
  ],
  "presets": [
    {
      "name": "Footer",
      "blocks": [
        { "type": "about" },
        { "type": "menu" }
      ]
    }
  ]
}
{% endschema %}

<style>
  .footer {
    background: #1a1a1a;
    color: #ccc;
    padding: 5rem 0 2rem;
    font-size: 0.9rem;
  }
  .footer__grid {
    display: grid;
    grid-template-columns: 2fr 1.5fr 1.5fr;
    gap: 4rem;
  }
  .footer__title {
    color: #fff;
    font-size: 1.1rem;
    margin-bottom: 2rem;
    position: relative;
    padding-bottom: 0.5rem;
    border-bottom: 2px solid var(--color-primary);
    display: inline-block;
  }
  .footer__col p {
    margin-bottom: 0.8rem;
    line-height: 1.5;
  }
  .footer__list, .footer__posts {
    list-style: none;
    padding: 0;
    margin: 0;
  }
  .footer__list li, .footer__posts li {
    margin-bottom: 0.5rem;
    border-bottom: 1px solid #333;
    padding-bottom: 0.5rem;
  }
  .footer__list li::before {
    content: 'â€¢';
    color: var(--color-primary);
    margin-right: 10px;
  }
  .footer__socials {
    display: flex;
    gap: 1rem;
    margin-top: 1.5rem;
  }
  .footer__bottom {
    margin-top: 4rem;
    padding-top: 2rem;
    border-top: 1px solid #333;
    display: flex;
    justify-content: space-between;
    align-items: center;
  }
</style>

{% schema %}
{
  "name": "Footer",
  "settings": []
}
{% endschema %}
