<section class="home-categories">
  <div class="container">
    <div class="section-title">
      <h2>BROWSE OUR CATEGORIES</h2>
    </div>
    
    <!-- Top Level Categories -->
    <div class="category-circles">
      <div class="category-item">
        <div class="category-item__image">
          <svg xmlns="http://www.w3.org/2000/svg" width="48" height="48" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1" stroke-linecap="round" stroke-linejoin="round" class="feather feather-hexagon"><path d="M21 16V8a2 2 0 0 0-1-1.73l-7-4a2 2 0 0 0-2 0l-7 4A2 2 0 0 0 3 8v8a2 2 0 0 0 1 1.73l7 4a2 2 0 0 0 2 0l7-4A2 2 0 0 0 21 16z"></path></svg>
        </div>
        <h3>JEWELRY</h3>
        <ul>
          <li>Necklaces</li>
          <li>Bracelets</li>
          <li>Earrings</li>
          <li>Rings</li>
        </ul>
      </div>
      <div class="category-item">
        <div class="category-item__image">
          <svg xmlns="http://www.w3.org/2000/svg" width="48" height="48" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1" stroke-linecap="round" stroke-linejoin="round" class="feather feather-stop-circle"><circle cx="12" cy="12" r="10"></circle><rect x="9" y="9" width="6" height="6"></rect></svg>
        </div>
        <h3>SPECIMENS</h3>
        <ul>
          <li>Aquamarine</li>
          <li>Tourmaline</li>
          <li>Quartz</li>
          <li>Amethyst</li>
        </ul>
      </div>
      <div class="category-item">
        <div class="category-item__image">
          <svg xmlns="http://www.w3.org/2000/svg" width="48" height="48" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1" stroke-linecap="round" stroke-linejoin="round" class="feather feather-package"><line x1="16.5" y1="9.4" x2="7.5" y2="4.21"></line><path d="M21 16V8a2 2 0 0 0-1-1.73l-7-4a2 2 0 0 0-2 0l-7 4A2 2 0 0 0 3 8v8a2 2 0 0 0 1 1.73l7 4a2 2 0 0 0 2 0l7-4A2 2 0 0 0 21 16z"></path><polyline points="3.27 6.96 12 12.01 20.73 6.96"></polyline><line x1="12" y1="22.08" x2="12" y2="12"></line></svg>
        </div>
        <h3>WHOLESALE</h3>
        <p>Bulk Gemstone Deals</p>
      </div>
    </div>

    <!-- Specific Specimen List -->
    <div class="specimen-tags">
      <span>Aquamarine</span>
      <span>Tourmaline</span>
      <span>Quartz</span>
      <span>Amethyst</span>
      <span>Topaz</span>
      <span>Afghanite</span>
      <span>Fluorite</span>
      <span>Lapis</span>
      <span>Garnets</span>
      <span>Peridot</span>
    </div>
  </div>
</section>

<style>
  .home-categories {
    padding: 6rem 0;
    background: #fff;
  }
  .category-circles {
    display: flex;
    justify-content: center;
    gap: 4rem;
    margin-bottom: 4rem;
  }
  .category-item {
    text-align: center;
    width: 220px;
    transition: transform 0.3s;
  }
  .category-item:hover {
    transform: translateY(-5px);
  }
  .category-item__image {
    width: 100px;
    height: 100px;
    background: #fdfcfb;
    border-radius: 50%;
    margin: 0 auto 1.5rem;
    display: flex;
    align-items: center;
    justify-content: center;
    color: var(--color-primary);
    box-shadow: 0 4px 20px rgba(0,0,0,0.05);
    border: 1px solid #f0f0f0;
  }
  .category-item h3 {
    font-size: 1.1rem;
    margin-bottom: 1rem;
    letter-spacing: 2px;
    font-family: var(--font-heading-family);
  }
  .category-item ul {
    list-style: none;
    padding: 0;
    font-size: 0.9rem;
    color: #555;
  }
  .category-item li { margin-bottom: 0.5rem; }

  .specimen-tags {
    display: flex;
    flex-wrap: wrap;
    justify-content: center;
    gap: 0.8rem;
    margin-top: 3rem;
    padding-top: 3rem;
    border-top: 1px solid #f5f5f5;
  }
  .specimen-tags span {
    padding: 0.6rem 2rem;
    background: white;
    border: 1px solid #eee;
    border-radius: 2px;
    font-size: 0.75rem;
    text-transform: uppercase;
    letter-spacing: 1px;
    transition: 0.3s;
    color: #444;
  }
  .specimen-tags span:hover {
    border-color: var(--color-primary);
    color: white;
    background-color: var(--color-primary);
  }
</style>

