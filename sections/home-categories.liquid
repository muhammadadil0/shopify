<section class="home-categories">
  <div class="container">
    {% if section.settings.title != blank %}
      <div class="section-title">
        <h2>{{ section.settings.title }}</h2>
      </div>
    {% endif %}
    
    <div class="category-circles">
      {% for block in section.blocks %}
        {% if block.type == 'category' %}
          <div class="category-item" {{ block.shopify_attributes }}>
            <a href="{{ block.settings.link }}" class="category-link">
              <div class="category-item__image">
                {% if block.settings.image != blank %}
                  <img src="{{ block.settings.image | image_url: width: 100 }}" alt="{{ block.settings.title }}">
                {% else %}
                  {{ block.settings.icon_svg }}
                {% endif %}
              </div>
              <h3>{{ block.settings.title }}</h3>
            </a>
            <div class="category-item__text">{{ block.settings.text }}</div>
          </div>
        {% endif %}
      {% endfor %}
    </div>

    <div class="specimen-tags">
      {% for block in section.blocks %}
        {% if block.type == 'tag' %}
          <a href="{{ block.settings.link }}" class="specimen-tag" {{ block.shopify_attributes }}>
            {{ block.settings.title }}
          </a>
        {% endif %}
      {% endfor %}
    </div>
  </div>
</section>

<style>
  .category-link { text-decoration: none; color: inherit; }
  .category-item__text { font-size: 0.85rem; color: #666; line-height: 1.4; }
  .specimen-tag {
    padding: 0.6rem 2rem;
    background: white;
    border: 1px solid #eee;
    display: inline-block;
    color: #444;
    text-decoration: none;
    font-size: 0.75rem;
    text-transform: uppercase;
    letter-spacing: 1px;
    transition: 0.3s;
  }
</style>

{% schema %}
{
  "name": "Home Categories",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Section Heading",
      "default": "BROWSE OUR CATEGORIES"
    }
  ],
  "blocks": [
    {
      "type": "category",
      "name": "Category",
      "settings": [
        {
          "type": "text",
          "id": "title",
          "label": "Title",
          "default": "JEWELRY"
        },
        {
          "type": "textarea",
          "id": "icon_svg",
          "label": "Icon (SVG Code)",
          "info": "Paste SVG code here"
        },
        {
          "type": "image_picker",
          "id": "image",
          "label": "Or use Image"
        },
        {
          "type": "richtext",
          "id": "text",
          "label": "Sub-items / Text",
          "default": "<p>Necklaces, Bracelets, Rings</p>"
        },
        {
          "type": "url",
          "id": "link",
          "label": "Link"
        }
      ]
    },
    {
      "type": "tag",
      "name": "Gemstone Tag",
      "settings": [
        {
          "type": "text",
          "id": "title",
          "label": "Tag Title",
          "default": "Aquamarine"
        },
        {
          "type": "url",
          "id": "link",
          "label": "Link"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Home Categories",
      "blocks": [
        { "type": "category", "settings": { "title": "JEWELRY" } },
        { "type": "category", "settings": { "title": "SPECIMENS" } },
        { "type": "category", "settings": { "title": "WHOLESALE" } }
      ]
    }
  ]
}
{% endschema %}

<style>
  .home-categories {
    padding: 6rem 0;
    background: #fff;
  }
  .category-circles {
    display: flex;
    justify-content: center;
    gap: 4rem;
    margin-bottom: 4rem;
  }
  .category-item {
    text-align: center;
    width: 220px;
    transition: transform 0.3s;
  }
  .category-item:hover {
    transform: translateY(-5px);
  }
  .category-item__image {
    width: 100px;
    height: 100px;
    background: #fdfcfb;
    border-radius: 50%;
    margin: 0 auto 1.5rem;
    display: flex;
    align-items: center;
    justify-content: center;
    color: var(--color-primary);
    box-shadow: 0 4px 20px rgba(0,0,0,0.05);
    border: 1px solid #f0f0f0;
  }
  .category-item h3 {
    font-size: 1.1rem;
    margin-bottom: 1rem;
    letter-spacing: 2px;
    font-family: var(--font-heading-family);
  }
  .category-item ul {
    list-style: none;
    padding: 0;
    font-size: 0.9rem;
    color: #555;
  }
  .category-item li { margin-bottom: 0.5rem; }

  .specimen-tags {
    display: flex;
    flex-wrap: wrap;
    justify-content: center;
    gap: 0.8rem;
    margin-top: 3rem;
    padding-top: 3rem;
    border-top: 1px solid #f5f5f5;
  }
  .specimen-tags span {
    padding: 0.6rem 2rem;
    background: white;
    border: 1px solid #eee;
    border-radius: 2px;
    font-size: 0.75rem;
    text-transform: uppercase;
    letter-spacing: 1px;
    transition: 0.3s;
    color: #444;
  }
  .specimen-tags span:hover {
    border-color: var(--color-primary);
    color: white;
    background-color: var(--color-primary);
  }
</style>

{% schema %}
{
  "name": "Home Categories",
  "presets": [
    {
      "name": "Home Categories"
    }
  ]
}
{% endschema %}
