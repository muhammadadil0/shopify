<section class="trust-badges">
  <div class="container">
    <div class="trust-badges__grid">
      {% for block in section.blocks %}
        <div class="trust-badge" {{ block.shopify_attributes }}>
          <div class="trust-badge__icon">
            {% if block.settings.image != blank %}
              <img src="{{ block.settings.image | image_url: width: 50 }}" alt="{{ block.settings.title }}">
            {% else %}
               <span style="font-size: 2rem;">{{ block.settings.emoji_icon }}</span>
            {% endif %}
          </div>
          <h3>{{ block.settings.title }}</h3>
          <p>{{ block.settings.text }}</p>
        </div>
      {% endfor %}
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Trust Badges",
  "blocks": [
    {
      "type": "badge",
      "name": "Badge",
      "settings": [
        { "type": "text", "id": "title", "label": "Title", "default": "Free Shipping" },
        { "type": "text", "id": "emoji_icon", "label": "Emoji Icon", "default": "üöö" },
        { "type": "image_picker", "id": "image", "label": "Or use Image Icon" },
        { "type": "textarea", "id": "text", "label": "Description", "default": "Free worldwide shipping on all orders." }
      ]
    }
  ],
  "presets": [
    {
      "name": "Trust Badges",
      "blocks": [
        { "type": "badge", "settings": { "title": "Free Shipping", "emoji_icon": "üöö" } },
        { "type": "badge", "settings": { "title": "Money Back", "emoji_icon": "üí∞" } },
        { "type": "badge", "settings": { "title": "Secure Payments", "emoji_icon": "üõ°Ô∏è" } },
        { "type": "badge", "settings": { "title": "Star Seller", "emoji_icon": "‚≠ê" } }
      ]
    }
  ]
}
{% endschema %}

<style>
  .trust-badges {
    padding: 4rem 0;
    border-top: 1px solid #eee;
    background: #fff;
  }
  .trust-badges__grid {
    display: grid;
    grid-template-columns: repeat(4, 1fr);
    gap: 2rem;
    text-align: center;
  }
  .trust-badge__icon {
    font-size: 2.5rem;
    margin-bottom: 1rem;
    color: var(--color-primary);
  }
  .trust-badge h3 {
    font-size: 1rem;
    text-transform: uppercase;
    margin-bottom: 0.5rem;
    color: #2c2c2c;
  }
  .trust-badge p {
    font-size: 0.85rem;
    color: #666;
    line-height: 1.4;
  }
  @media (max-width: 768px) {
    .trust-badges__grid {
      grid-template-columns: 1fr 1fr;
    }
  }
</style>

{% schema %}
{
  "name": "Trust Badges",
  "presets": [
    {
      "name": "Trust Badges"
    }
  ]
}
{% endschema %}
